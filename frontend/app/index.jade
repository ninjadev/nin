//- This gets compiled to index.html under assets. Do not edit assets/index.html directly
doctype 5
html(lang="en", ng-app="application")
  head
    title=nin
    link(rel="stylesheet", href="css/app.css")
    meta(name="viewport", content="width=device-width", initial-scale="1.0")

body
  script(src="javascripts/vendor.js")
  script(src="javascripts/app.js")

  .container-fluid
    #upper-row.row-fluid
      #inspector.col-xs-6.pane(ng-controller="OptionsController")
        .row-fluid(ng-repeat="option in options")
          label
            {{ option.name }}
            input(ng-model="option.value", ng-change="save({{ index }})")
      #preview.col-xs-6.pane

    #timeline.row-fluid.pane(ng-controller="LayerController")
      .song.row-fluid
        .meta.col-xs-2
          span.name
            Music
        #music-container.col-xs-10
        #music-container-overlay

      .layer.row-fluid(ng-repeat="layer in layers", data-i="{{ layer.i }}")
        .meta.col-xs-2
          .display-name {{ layer.displayNameÂ }}
          .name {{ layer.name }}
        .col-xs-10(style="height:100%;padding:0;margin:0;")
          div.layer-box(style="width:{{ layer.cssWidth }}%;left:{{ layer.cssLeft }}%;")

    audio#music
        source(src="http://localhost:9999/res/music.mp3")
        source(src="http://localhost:9999/res/music.ogg")

  script.
    nin();
