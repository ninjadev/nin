//- This gets compiled to index.html under assets. Do not edit assets/index.html directly
doctype 5
html(lang="en", ng-app="application")
  head
    title=nin
    link(rel="stylesheet", href="css/app.css")
    meta(name="viewport", content="width=device-width", initial-scale="1.0")

body
  script(src="javascripts/vendor.js")
  script(src="javascripts/app.js")
  script(src="//cdnjs.cloudflare.com/ajax/libs/three.js/r58/three.min.js")
  script(src="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.16.0/codemirror.min.js")
  script(src="//codemirror.net/keymap/vim.js")

  .container-fluid
    #upper-row.row-fluid
      #inspector.col-xs-6.pane
        textarea#text-area(name="content")
      #preview.col-xs-6.pane
        canvas#preview-canvas

    #timeline.row-fluid.pane(ng-controller="LayerController")
      .song.row-fluid
        .meta.col-xs-2
          span.name.
            Music
        .col-xs-10

      .layer.row-fluid(ng-repeat="layer in layers")
        .meta.col-xs-2
          span.name {{ layer.nameÂ }}
        .col-xs-10

  script
    var textArea = document.getElementById("text-area")
    var codeMirror = CodeMirror.fromTextArea(textArea, {
        mode: "javascript",
        keyMap: "vim"
      })