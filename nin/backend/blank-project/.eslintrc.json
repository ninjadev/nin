{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
      "NIN": true,
      "THREE": true,
      "GU": true,
      "BEAT": true,
      "BEAN": true,
      "BEAN_FOR_FRAME": true,
      "FRAME_FOR_BEAN": true,
      "Loader": true,
      "SHADERS": true,
      "demo": true,
      "clamp": true,
      "lerp": true,
      "easeOut": true,
      "easeIn": true,
      "smoothstep": true,
      "elasticOut": true
    }
}
